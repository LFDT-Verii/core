{
    "name": "@verii/sample-web-wallet-server",
    "version": "0.5.0-build",
    "description": "Sample VNF Wallet Nodejs Server",
    "repository": "https://github.com/LFDT-Verii/core",
    "scripts": {
        "lint": "eslint --ext .js,.ts,.tsx src",
        "lint:fix": "eslint --fix --ext .js,.ts,.tsx src",
        "lint:ci": "eslint --ext .js,.ts,.tsx --format json >> eslint-results.json src",
        "test": "node --enable-source-maps --import=global-jsdom/register --import=tsx --test --test-reporter=spec --test-reporter-destination=stdout '**/*.test.ts' '**/*.test.tsx'",
        "test:ci": "node --enable-source-maps --import=global-jsdom/register --import=tsx --test --experimental-test-coverage --test-reporter=spec --test-reporter-destination=stdout --test-reporter=lcov --test-reporter-destination=lcov.info  '**/*.test.ts' '**/*.test.tsx'",
        "build": "tsc",
        "prepublishOnly": "tsc",
        "start": "node ./dist/Server.js",
        "start:dev": "tsx src/Server.ts"

    },
    "license": "Apache-2.0",
    "publishConfig": {
        "access": "public"
    },
    "engines": {
        "node": ">= 20.0.0"
    },
    "dependencies": {
        "@fastify/autoload": "^6.0.0",
        "@fastify/cors": "^11.0.0",
        "@verii/vc-checks": "0.5.0-build",
        "@verii/vnf-nodejs-wallet-sdk": "0.5.0-build",
        "axios": "^1.7.9",
        "env-var": "^7.5.0",
        "dotenv": "^16.4.7",
        "fastify": "^5.0.0",
        "fastify-plugin": "^5.0.0"
    },
    "devDependencies": {
        "@types/node": "22.18.9",
        "eslint": "8.57.1",
        "eslint-config-prettier": "8.10.2",
        "eslint-import-resolver-typescript": "3.10.1",
        "eslint-plugin-autofix": "1.1.0",
        "eslint-plugin-import": "2.32.0",
        "eslint-plugin-jsx-a11y": "6.10.2",
        "eslint-plugin-prefer-arrow-functions": "3.8.1",
        "eslint-plugin-prettier": "4.2.5",
        "eslint-plugin-unused-imports": "2.0.0",
        "expect": "29.7.0",
        "global-jsdom": "26.0.0",
        "tsx": "4.20.6",
        "typescript": "5.9.2",
        "json-schema-to-ts": "3.1.1",
        "pino": "9.11.0",
        "pino-pretty": "13.1.1"
    },
    "nx": {
        "targets": {
            "build": {
                "outputs": [
                    "{projectRoot}/dist"
                ]
            }
        }
    }
}
