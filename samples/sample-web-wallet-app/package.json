{
  "name": "@verii/sample-web-wallet-app",
  "version": "0.5.0-build",
  "description": "Sample VNF Web Wallet App",
  "repository": "https://github.com/LFDT-Verii/core",
  "license": "Apache-2.0",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "axios": "^1.7.9"
  },
  "devDependencies": {
    "@types/node": "22.18.13",
    "@types/react": "18.3.26",
    "@types/react-dom": "18.3.7",
    "@testing-library/dom": "10.4.1",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@vitejs/plugin-react-swc": "4.1.0",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-autofix": "2.2.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-prefer-arrow-functions": "3.9.1",
    "eslint-plugin-prettier": "5.5.4",
    "expect": "30.2.0",
    "global-jsdom": "26.0.0",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "vite": "7.1.11",
    "vite-tsconfig-paths": "5.1.4",
    "vite-plugin-svgr": "4.5.0"
  },
  "scripts": {
    "lint": "eslint --ext .js,.ts,.tsx src",
    "lint:fix": "eslint --fix --ext .js,.ts,.tsx src",
    "lint:ci": "eslint --ext .js,.ts,.tsx --format json >> eslint-results.json src",
    "start": "vite",
    "build": "tsc & vite build",
    "serve": "vite preview",
    "test": "node --enable-source-maps --import=global-jsdom/register --import=tsx --import=./setup-tests.js --test --test-reporter=spec --test-reporter-destination=stdout '**/*.test.ts' '**/*.test.tsx'",
    "test:ci": "node --enable-source-maps --import=global-jsdom/register --import=tsx --import=./setup-tests.js  --test --experimental-test-coverage --test-reporter=spec --test-reporter-destination=stdout --test-reporter=lcov --test-reporter-destination=lcov.info '**/*.test.ts' '**/*.test.tsx'"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
