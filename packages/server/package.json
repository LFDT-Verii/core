{
  "name": "@verii/server-provider",
  "version": "0.5.0-build",
  "description": "Server common package for Velocity Projects ",
  "repository": "https://github.com/LFDT-Verii/core",
  "main": "index.js",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "cross-env NODE_ENV=test node --test --test-concurrency=1 --experimental-test-module-mocks --experimental-test-coverage --test-reporter=spec --test-reporter-destination=stdout 'test/**/*.test.js'",
    "test:ci": "NODE_ENV=test node --test --test-concurrency=1 --experimental-test-module-mocks --experimental-test-coverage --test-coverage-include='src/**' --test-reporter=spec --test-reporter=junit --test-reporter-destination=stdout --test-reporter-destination=test-results.junit.xml --test-reporter=lcov --test-reporter-destination=lcov.info 'test/**/*.test.js'",
    "lint": "eslint --ext .js .",
    "lint:ci": "eslint . --format json >> eslint-results.json",
    "lint:fix": "eslint --fix --ext .js ."
  },
  "dependencies": {
    "@spencejs/spence-events": "^0.10.2",
    "@spencejs/spence-mongo-repos": "^0.10.2",
    "@verii/common-functions": "0.5.0-build",
    "@verii/common-schemas": "0.5.0-build",
    "@verii/fastify-plugins": "0.5.0-build",
    "@verii/logger": "0.5.0-build",
    "@verii/rest-queries": "0.5.0-build",
    "ajv-formats": "3.0.1",
    "http-errors": "2.0.0",
    "lodash": "^4.17.21",
    "nanoid": "~5.1.0"
  },
  "peerDependencies": {
    "fastify": ">=4.29.0",
    "fastify-plugin": ">=4.5.1",
    "@fastify/helmet": ">=11.1.1",
    "@fastify/sensible": ">=5.6.0",
    "@fastify/swagger": ">=8.15.0",
    "@fastify/swagger-ui": ">=4.2.0"
  },
  "devDependencies": {
    "@verii/config": "0.5.0-build",
    "@verii/tests-helpers": "0.5.0-build",
    "eslint": "9.36.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-autofix": "2.2.0",
    "eslint-plugin-better-mutation": "2.1.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-prefer-arrow-functions": "3.8.1",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-watch": "8.0.0",
    "got": "11.8.6",
    "h2url": "0.2.0",
    "expect": "29.7.0",
    "prettier": "3.6.2"
  },
  "nx": {
    "tags": ["lib"]
  }
}
