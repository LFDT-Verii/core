    "eslint-plugin-better-mutation": "2.1.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-prefer-arrow-functions": "3.9.1",
    "eslint-plugin-prettier": "5.5.5",
    "eslint-watch": "8.0.0",
    "expect": "30.2.0",
