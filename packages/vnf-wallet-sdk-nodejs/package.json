{
  "name": "@verii/vnf-nodejs-wallet-sdk",
  "version": "0.5.0-build",
  "description": "VNF Wallet SDK Nodejs",
  "repository": "https://github.com/LFDT-Verii/core",
  "author": "Andres Olave",
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "prepublishOnly": "tsc --declaration",
    "test": "node --enable-source-maps --import=global-jsdom/register --import=tsx --import=./setup-tests.js --test --test-reporter=spec --test-reporter-destination=stdout '**/*.test.ts' '**/*.test.tsx'",
    "test:ci": "node --enable-source-maps --import=global-jsdom/register --import=tsx --import=./setup-tests.js --test --experimental-test-coverage --test-reporter=spec --test-reporter-destination=stdout --test-reporter=lcov --test-reporter-destination=lcov.info  '**/*.test.ts' '**/*.test.tsx'"
  },
  "engines": {
    "node": ">= 20.0.0"
  },
  "dependencies": {
    "@verii/vc-checks": "^0.5.0-build",
    "axios": "^1.13.5",
    "canonicalize": "^2.1.0",
    "jose": "^5.9.6",
    "lodash": "^4.17.21",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "16.3.2",
    "@types/node": "22.19.11",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-autofix": "2.2.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-prefer-arrow-functions": "3.9.1",
    "eslint-plugin-prettier": "5.5.5",
    "eslint-plugin-unused-imports": "4.4.1",
    "expect": "30.2.0",
    "typescript": "5.9.3"
  },
  "files": [
    "/dist"
  ],
  "nx": {
    "tags": [
      "lib"
    ]
  }
