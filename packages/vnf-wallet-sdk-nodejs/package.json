{
    "name": "@verii/vnf-nodejs-wallet-sdk",
    "version": "0.5.0-build",
    "description": "VNF Wallet SDK Nodejs",
    "repository": "https://github.com/LFDT-Verii/core",
    "author": "Andres Olave",
    "license": "Apache-2.0",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "lint": "eslint --ext .js,.ts,.tsx .",
        "lint:fix": "eslint --fix --ext .js,.ts,.tsx .",
        "build": "tsc",
        "build:watch": "tsc --watch",
        "prepublishOnly": "tsc --declaration",
        "test": "node --enable-source-maps --import=global-jsdom/register --import=tsx --import=./setup-tests.js --test --test-reporter=spec --test-reporter-destination=stdout '**/*.test.ts' '**/*.test.tsx'",
        "test:ci": "node --enable-source-maps --import=global-jsdom/register --import=tsx --import=./setup-tests.js --test --experimental-test-coverage --test-reporter=spec --test-reporter-destination=stdout --test-reporter=lcov --test-reporter-destination=lcov.info  '**/*.test.ts' '**/*.test.tsx'"
    },
    "engines": {
        "node": ">= 20.0.0"
    },
    "dependencies": {
        "@verii/vc-checks": "^0.5.0-build",
        "axios": "^1.7.9",
        "canonicalize": "^2.1.0",
        "jose": "^6.0.0",
        "lodash": "^4.17.21",
        "pino": "^9.6.0",
        "pino-pretty": "^13.0.0"
    },
    "devDependencies": {
        "@testing-library/react": "16.3.0",
        "@types/node": "22.18.13",
        "eslint": "8.57.1",
        "eslint-config-prettier": "8.10.2",
        "eslint-import-resolver-typescript": "3.10.1",
        "eslint-plugin-autofix": "1.1.0",
        "eslint-plugin-import": "2.32.0",
        "eslint-plugin-jsx-a11y": "6.10.2",
        "eslint-plugin-prefer-arrow-functions": "3.9.1",
        "eslint-plugin-prettier": "4.2.5",
        "eslint-plugin-unused-imports": "2.0.0",
        "expect": "30.2.0",
        "typescript": "5.9.3"
    },
    "files": [
        "/dist"
    ],
    "nx": {
        "tags": ["lib"]
    }
}
