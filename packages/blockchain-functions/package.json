{
  "name": "@verii/blockchain-functions",
  "version": "0.5.0-build",
  "description": "Blockchain related wrappers and helpers.",
  "repository": "https://github.com/LFDT-Verii/core",
  "main": "index.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "cross-env NODE_ENV=test node --test --test-concurrency=1 --test-timeout=300000  --experimental-test-module-mocks --experimental-test-coverage **/*.test.js --passWithNoTests",
    "test:ci": "NODE_ENV=test node --test --test-concurrency=1 --test-timeout=300000 --experimental-test-module-mocks --experimental-test-coverage --test-coverage-include='src/**' --test-reporter=spec --test-reporter=junit --test-reporter-destination=stdout --test-reporter-destination=test-results.junit.xml --test-reporter=lcov --test-reporter-destination=lcov.info 'test/**/*.test.js'",
    "lint": "eslint --ext .js .",
    "lint:ci": "eslint . --format json >> eslint-results.json",
    "lint:fix": "eslint --fix --ext .js ."
  },
  "author": "Itay Podhajcer",
  "license": "Apache-2.0",
  "dependencies": {
    "@verii/jwt": "0.5.0-build",
    "lodash": "^4.17.21",
    "ethers": "~6.15.0"
  },
  "resolutions": {
