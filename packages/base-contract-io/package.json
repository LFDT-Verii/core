    "fastify-plugin": "^5.0.0",
    "ethers": "6.15.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@verii/tests-helpers": "0.5.0-build",
    "@spencejs/spence-config":  "0.10.2",
    "@verii/crypto": "0.5.0-build",
    "expect": "29.7.0"
  },
  "nx": {
    "tags": ["lib"]
  }
