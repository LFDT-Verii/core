{
  "name": "@verii/contracts-deployment",
  "version": "0.5.0-build",
  "description": "A tool for deploying our contracts locally.",
  "repository": "https://github.com/LFDT-Verii/core",
  "main": "index.js",
  "bin": "index.js",
  "scripts": {
    "deploy": "node ./index.js",
    "test": "cross-env NODE_ENV=test node --test --test-concurrency=1 --experimental-test-module-mocks --experimental-test-coverage **/*.test.js --passWithNoTests",
    "lint": "pnpm exec eslint .",
    "lint:ci": "pnpm exec eslint . --format json >> eslint-results.json",
    "lint:fix": "pnpm exec eslint --fix ."
  },
  "author": "Itay Podhajcer",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "ethers": "6.16.0",
    "@verii/crypto": "^0.5.0-build",
    "@verii/contract-permissions": "^0.5.0-build",
    "@verii/metadata-registration": "^0.5.0-build"
  }
}
